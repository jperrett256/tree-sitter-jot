{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "jot",
  "rules": {
    "document": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_block_element"
      }
    },
    "_block_element": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "heading"
        },
        {
          "type": "SYMBOL",
          "name": "paragraph"
        },
        {
          "type": "SYMBOL",
          "name": "block_tag"
        },
        {
          "type": "SYMBOL",
          "name": "blank_line"
        }
      ]
    },
    "blank_line": {
      "type": "STRING",
      "value": "\n"
    },
    "heading": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "level",
          "content": {
            "type": "SYMBOL",
            "name": "heading_marker"
          }
        },
        {
          "type": "STRING",
          "value": " "
        },
        {
          "type": "FIELD",
          "name": "content",
          "content": {
            "type": "SYMBOL",
            "name": "paragraph"
          }
        }
      ]
    },
    "heading_marker": {
      "type": "PATTERN",
      "value": "#+"
    },
    "paragraph": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "REPEAT1",
        "content": {
          "type": "SEQ",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_inline_content"
            },
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "STRING",
                  "value": "\n"
                },
                {
                  "type": "BLANK"
                }
              ]
            }
          ]
        }
      }
    },
    "_inline_content": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "text"
        },
        {
          "type": "SYMBOL",
          "name": "inline_tag"
        },
        {
          "type": "SYMBOL",
          "name": "escape_sequence"
        },
        {
          "type": "SYMBOL",
          "name": "raw_string"
        }
      ]
    },
    "text": {
      "type": "PATTERN",
      "value": "[^@#{}\\\\\\n]+"
    },
    "raw_string": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "@"
        },
        {
          "type": "FIELD",
          "name": "content",
          "content": {
            "type": "SYMBOL",
            "name": "raw_string_content"
          }
        }
      ]
    },
    "raw_string_content": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "`"
        },
        {
          "type": "PATTERN",
          "value": "[^`\\n]+"
        },
        {
          "type": "STRING",
          "value": "`"
        }
      ]
    },
    "escape_sequence": {
      "type": "PATTERN",
      "value": "\\\\[@{}\\\\]"
    },
    "inline_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "@"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": "["
                },
                {
                  "type": "FIELD",
                  "name": "args",
                  "content": {
                    "type": "SYMBOL",
                    "name": "tag_args"
                  }
                },
                {
                  "type": "STRING",
                  "value": "]"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "FIELD",
          "name": "content",
          "content": {
            "type": "SYMBOL",
            "name": "paragraph"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "block_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "begin",
          "content": {
            "type": "SYMBOL",
            "name": "block_begin"
          }
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": "["
                },
                {
                  "type": "FIELD",
                  "name": "args",
                  "content": {
                    "type": "SYMBOL",
                    "name": "tag_args"
                  }
                },
                {
                  "type": "STRING",
                  "value": "]"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "\n"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "FIELD",
              "name": "content",
              "content": {
                "type": "SYMBOL",
                "name": "block_content"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "FIELD",
          "name": "end",
          "content": {
            "type": "SYMBOL",
            "name": "block_end"
          }
        }
      ]
    },
    "block_begin": {
      "type": "PATTERN",
      "value": "@>+"
    },
    "block_end": {
      "type": "PATTERN",
      "value": "@<+"
    },
    "block_content": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_block_element"
      }
    },
    "tag_args": {
      "type": "PATTERN",
      "value": "[^\\]]*"
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[a-zA-Z_][a-zA-Z0-9_-]*"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}